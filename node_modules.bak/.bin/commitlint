#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules/@commitlint/cli/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules/@commitlint/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/node_modules:/home/hawkwood/semantic-release-github/node_modules:/home/hawkwood/node_modules:/home/node_modules:/node_modules:/home/hawkwood/semantic-release-github/node_modules/@commitlint/cli/node_modules:/home/hawkwood/semantic-release-github/node_modules/@commitlint/node_modules"
else
  export NODE_PATH="$NODE_PATH:/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules/@commitlint/cli/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules/@commitlint/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/@commitlint+cli@15.0.0/node_modules:/home/hawkwood/semantic-release-github/node_modules/.pnpm/node_modules:/home/hawkwood/semantic-release-github/node_modules:/home/hawkwood/node_modules:/home/node_modules:/node_modules:/home/hawkwood/semantic-release-github/node_modules/@commitlint/cli/node_modules:/home/hawkwood/semantic-release-github/node_modules/@commitlint/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@commitlint/cli/cli.js" "$@"
else
  exec node  "$basedir/../@commitlint/cli/cli.js" "$@"
fi
